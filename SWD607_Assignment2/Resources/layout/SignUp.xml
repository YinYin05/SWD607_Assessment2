<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"    
    android:background="@android:color/white">

    <!-- Company Logo -->
    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="163dp"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:src="@drawable/aucklandrangerslogo2"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/imageViewLogo"
        android:layout_marginTop="1dp"/>
    <TextView
        android:layout_width="match_parent"
        android:text="@string/company_name"
        android:layout_height="70dp"
        android:gravity="center"
        android:id="@+id/txtCompany_Name"
        android:textColor="@android:color/background_dark"
        android:textSize="40dp"
        android:textStyle="bold"    
        android:layout_marginTop="150dp"/>
    <TextView
        android:layout_width="match_parent"
        android:text="@string/company_subname"
        android:gravity="center"
        android:layout_height="35dp"
        android:textSize="20dp"
        android:textColor="@android:color/background_dark"
        android:id="@+id/txt1"
        android:layout_marginTop="210dp"/>

    <!-- Register Now Title -->
    <TextView
        android:id="@+id/textViewMyAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_now"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"       
        android:layout_below="@+id/txt1"
        android:layout_marginTop="20dp"
        android:paddingStart="40dp"/>

    <!-- Username EditText -->
    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="@string/enter_username"
        android:inputType="text"
        android:textColorHint="@android:color/darker_gray"
        android:background="@drawable/white_button_border"
        android:textSize="25sp"       
        android:layout_below="@id/textViewMyAccount"
        android:paddingStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp" />

    <!-- Password EditText -->
    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="@string/password_hint"
        android:inputType="textVisiblePassword"
        android:textColorHint="@android:color/darker_gray"
        android:background="@drawable/white_button_border"
        android:paddingStart="15dp"
        android:textSize="25sp"       
        android:layout_below="@+id/editTextUsername"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp" />

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/editTextPassword">          

            <!-- First Name -->
            <EditText
                android:id="@+id/editTextFirstName"
                android:layout_width="240dp"
                android:layout_height="60dp"
                android:hint="@string/first_name"
                android:inputType="text"
                android:paddingStart="15dp"
                android:textColorHint="@android:color/darker_gray"
                android:background="@drawable/white_button_border"
                android:textSize="25sp"                
                android:layout_marginTop="10dp"
                android:layout_marginStart="40dp"/>

            <!-- Last Name -->
            <EditText
                android:id="@+id/editTextLastName"
                android:layout_width="270dp"
                android:layout_height="60dp"
                android:hint="@string/last_name"
                android:inputType="text"
                android:paddingStart="15dp"
                android:layout_toRightOf="@+id/editTextFirstName"
                android:textColorHint="@android:color/darker_gray"
                android:background="@drawable/white_button_border"
                android:textSize="25sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"/>

             <!-- Mobile Number -->
             <EditText
                android:id="@+id/editTextMobileNumber"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="@string/mobile_number"
                android:inputType="number"
                android:paddingStart="15dp"
                android:textColorHint="@android:color/darker_gray"
                android:background="@drawable/white_button_border"
                android:textSize="25sp"
                android:layout_below="@+id/editTextFirstName"
                android:layout_marginTop="10dp"        
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp" />

            <!-- Email Address -->
            <EditText
                android:id="@+id/editTextEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="@string/email_address"
                android:inputType="textEmailAddress"
                android:paddingStart="15dp"
                android:textColorHint="@android:color/darker_gray"
                android:background="@drawable/white_button_border"
                android:textSize="25sp"
                android:layout_below="@+id/editTextMobileNumber"
                android:layout_marginTop="10dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp" />
    
            <!-- Submit Button -->
            <Button
                android:id="@+id/buttonSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/submit_button_text"
                android:textSize="30sp"
                android:textStyle="bold"
                android:background="@drawable/blue_button"
                android:textColor="@android:color/black"
                android:padding="16dp"
                android:layout_margin="35dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/editTextEmailAddress"
                android:layout_centerHorizontal="true"
                android:textAllCaps="false"/>

        </RelativeLayout>
        
</RelativeLayout>
