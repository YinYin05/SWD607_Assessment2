<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget0"
    android:background="@android:color/white"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_button_image"        
        android:textColor="@android:color/black"
        android:background="@android:color/transparent"
        android:contentDescription="@string/buttonBack"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <!-- Company Logo -->
    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="163dp"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:src="@drawable/aucklandrangerslogo2"
        android:contentDescription="@string/imageViewLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"/>

    <!-- Heading -->
    <TextView
        android:layout_width="match_parent"
        android:text="@string/company_name"
        android:layout_height="70dp"
        android:gravity="center"
        android:id="@+id/txtName"
        android:textColor="@android:color/background_dark"
        android:textSize="40dp"
        android:textStyle="bold"    
        android:layout_marginTop="150dp"/>
    <TextView
        android:layout_width="match_parent"
        android:text="@string/company_subname"
        android:gravity="center"
        android:layout_height="35dp"
        android:textSize="20dp"
        android:textColor="@android:color/background_dark"
        android:id="@+id/txt1"
        android:layout_marginTop="210dp"/>

    <!-- Profile Title -->
    <TextView
        android:layout_width="match_parent"
        android:text="@string/my_profile"
        android:gravity="center"
        android:layout_height="80dp"
        android:textSize="35dp"
        android:textColor="@android:color/background_dark"
        android:id="@+id/txtAccount"
        android:layout_marginTop="240dp"
        android:textStyle="bold"/>

    <!-- Username -->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingStart="15dp"        
        android:inputType="text"
        android:gravity="center_vertical"
        android:textColor="@android:color/background_dark"
        android:id="@+id/txtUsername"
        android:textColorHint="@android:color/darker_gray"
        android:hint="@string/enter_username"
        android:background="@drawable/white_button_border" 
        android:layout_marginTop="320dp"/>

    <!-- Password -->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingStart="15dp"
        android:inputType="textVisiblePassword"
        android:gravity="center_vertical"
        android:textColor="@android:color/background_dark"
        android:id="@+id/txtPassword"
        android:hint="@string/password_hint"
        android:textColorHint="@android:color/darker_gray"
        android:background="@drawable/white_button_border"
        android:layout_marginTop="400dp"/>

        <!-- First Name and Last Name-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/txtPassword">
            <EditText
                android:id="@+id/editTextFirstName"
                android:layout_width="230dp"
                android:layout_height="60dp"
                android:hint="@string/first_name"
                android:inputType="text"
                android:paddingStart="15dp"
                android:gravity="center_vertical"
                android:textColorHint="@android:color/darker_gray"
                android:background="@drawable/white_button_border"
                android:textSize="25sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"/>

            <EditText
                android:id="@+id/editTextLastName"
                android:layout_width="317.5dp"
                android:layout_height="60dp"
                android:hint="@string/last_name"
                android:gravity="center_vertical"
                android:inputType="text"
                android:layout_toRightOf="@+id/editTextFirstName"
                android:textColorHint="@android:color/darker_gray"
                android:background="@drawable/white_button_border"
                android:textSize="25sp"
                android:paddingStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"/>
        </RelativeLayout>

        <!-- Mobile Number -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="25dp"
            android:inputType="phone"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingStart="15dp"
            android:gravity="center_vertical"
            android:textColor="@android:color/background_dark"
            android:id="@+id/txtPhone"
            android:hint="@string/mobile_number"
            android:textColorHint="@android:color/darker_gray"
            android:background="@drawable/white_button_border"
            android:layout_marginTop="560dp"/>

        <!-- Email Address -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/background_dark"
            android:id="@+id/txtEmail"
            android:gravity="center_vertical"
            android:hint="@string/email_address"
            android:paddingStart="15dp"
            android:textColorHint="@android:color/darker_gray"
            android:background="@drawable/white_button_border"
            android:layout_marginTop="640dp"/>

    <!-- Update Button -->
            <Button
                android:id="@+id/buttonSend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/update_button"
                android:textSize="30sp"
                android:textStyle="bold"
                android:background="@drawable/gray_button"
                android:textColor="@android:color/white"
                android:padding="8dp"
                android:layout_margin="20dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/txtEmail"
                android:textAllCaps="false"/>

</RelativeLayout>
    