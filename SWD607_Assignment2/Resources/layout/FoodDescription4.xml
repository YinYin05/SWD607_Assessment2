<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Next Button -->
    <ImageButton
        android:id="@+id/buttonNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/next_button_image"   
        android:textColor="@android:color/black"
        android:background="@android:color/transparent"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/imageViewLogo"/>

    <!-- Close Button -->
    <ImageButton
        android:id="@+id/buttonClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/close_button_image"   
        android:textColor="@android:color/black"
        android:background="@android:color/transparent"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/imageViewLogo"/>

    <!-- Heading-->
    <TextView
        android:id="@+id/textViewTitleCompany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/food_description_title"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

     <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView11"
            android:layout_below="@+id/textViewTitleCompany">
         <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Food Image -->
                <ImageView      
                    android:layout_width="match_parent"
                    android:layout_height="300dp"        
                    android:background="@drawable/image_round_corner"
                    android:src="@drawable/hokey_pokey2"
                    android:scaleType="fitCenter"                    
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/imageView11"
                    android:contentDescription="@string/imageViewLogo"/>

                <!-- Food Name and Price -->
                <TextView
                    android:id="@+id/textViewDishName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/food_name4"
                    android:layout_below="@+id/imageView11"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="16dp" />
                <TextView
                    android:id="@+id/textViewDishPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/food_price4"
                    android:layout_below="@+id/imageView11"
                    android:textSize="25sp"
                    android:layout_marginStart="20dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp" />
                 <TextView
                    android:id="@+id/textViewDishPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/food_photo"
                    android:layout_below="@+id/textViewDishName"
                    android:textSize="25sp"       
                    android:textColor="@android:color/black"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp" />

                <!-- Food Photos -->
                <LinearLayout
                    android:id="@+id/imageSection1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@android:color/white"       
                    android:layout_below="@+id/textViewDishPhoto"
                    android:layout_margin="5dp">

                    <ImageView
                        android:id="@+id/imageView21"
                        android:layout_width="5dp"
                        android:layout_height="100dp"            
                        android:layout_margin="5dp"
                        android:background="@drawable/hokey_pokey1"
                        android:contentDescription="@string/imageViewLogo"
                        android:layout_weight="0.5"/>

                    <ImageView
                        android:id="@+id/imageView22"
                        android:layout_width="5dp"
                        android:layout_height="100dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/hokey_pokey4"
                        android:contentDescription="@string/imageViewLogo"
                        android:layout_weight="0.5"/>

                    <ImageView
                        android:id="@+id/imageView23"
                        android:layout_width="5dp"
                        android:layout_height="100dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/hokey_pokey3"
                        android:contentDescription="@string/imageViewLogo"
                        android:layout_weight="0.5"/>       
                </LinearLayout> 

                        <TextView
                            android:id="@+id/textViewDishDetails"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/food_details"
                            android:textStyle="bold"
                            android:layout_below="@+id/imageSection1"
                            android:textSize="25sp"       
                            android:textColor="@android:color/black"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp" />

                        <!-- Food Ingredients-->
                        <TextView
                            android:id="@+id/textViewDishIngredients"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/food_ingredients"
                            android:layout_below="@+id/textViewDishDetails"
                            android:textSize="25sp"       
                            android:textColor="@android:color/black"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp" />

                        <ImageView      
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"        
                            android:background="@drawable/image_round_corner"
                            android:src="@drawable/hokey_pokey_ingredients"
                            android:scaleType="fitCenter"                    
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="5dp"
                            android:id="@+id/imageView55"
                            android:contentDescription="@string/imageViewLogo"/>                             

                        <!-- Recipe -->
                        <TextView
                            android:id="@+id/textViewDishRecipe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/food_recipe"
                            android:layout_below="@+id/imageView55"
                            android:textSize="25sp"       
                            android:textColor="@android:color/black"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp" />

                        <ImageView      
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"        
                            android:background="@drawable/image_round_corner"
                            android:src="@drawable/hokey_pokey_recipe"
                            android:scaleType="fitCenter"                    
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="140dp"
                            android:id="@+id/imageView56"
                            android:contentDescription="@string/imageViewLogo"/>
            </LinearLayout>            
       </ScrollView>
           

    <Button
        android:id="@+id/buttonOrderNow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/order_now"
        android:textSize="25sp"
        android:textStyle="bold"
        android:background="@drawable/blue_button"
        android:textColor="@android:color/white"
        android:padding="16dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="40dp"
        android:layout_above="@+id/navigationSection"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"/>
      

    <!-- Navigation Section -->
    <LinearLayout
        android:id="@+id/navigationSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:padding="5dp"
        android:layout_margin="10dp"        
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/buttonHome"
            android:layout_width="0dp"
            android:src="@drawable/home_button_image"
            android:background="@android:color/white"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/imageViewLogo"/>

        <ImageButton
            android:id="@+id/buttonSearch"
            android:layout_width="0dp"
            android:src="@drawable/search_button_image"
            android:background="@android:color/white"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/imageViewLogo"/>

        <ImageButton
            android:id="@+id/buttonContactUs"
            android:layout_width="0dp"
            android:src="@drawable/contact_button_image"
            android:background="@android:color/white"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/imageViewLogo"/>

        <ImageButton
            android:id="@+id/buttonProfile"
            android:layout_width="0dp"
            android:src="@drawable/profile_button_image"
            android:background="@android:color/white"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/imageViewLogo"/>
    </LinearLayout>

</RelativeLayout>
