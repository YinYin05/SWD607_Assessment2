<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_button_image"
        android:textColor="@android:color/black"
        android:background="@android:color/transparent"
        android:contentDescription="@string/buttonBack"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <!-- Title : Payment -->
    <TextView
        android:id="@+id/textViewCardPayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/credit_debit"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />
    </RelativeLayout>
        
    <ImageView      
        android:layout_width="match_parent"
        android:layout_height="200dp"        
        android:background="@drawable/image_round_corner"
        android:src="@drawable/cards"    
        android:layout_below="@+id/textViewTitleCompany"
        android:contentDescription="@string/imageViewLogo"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/imageView1" />
    <TextView
        android:text="@string/card_number"        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:id="@+id/textView1" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textColorHint="@android:color/darker_gray"
        android:background="@drawable/white_button_border"
        android:hint="@string/card_number_preview"
        android:textSize="25sp"        
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:paddingTop="10dp"
        android:paddingStart="16dp"
        android:paddingBottom="10dp"       
        android:id="@+id/CardNumber_EditText" />
    <TextView
        android:text="@string/name_on_card"
        android:layout_marginStart="25dp"
        android:textColor="@android:color/black"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textColorHint="@android:color/darker_gray"
        android:background="@drawable/white_button_border"
        android:hint="@string/name_on_card_preview"
        android:textSize="25sp"        
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:paddingTop="10dp"
        android:paddingStart="16dp"
        android:paddingBottom="10dp"
        android:id="@+id/SelectItem_Diet_EditText" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
    <TextView
        android:text="@string/expiry_date"
        android:layout_marginStart="25dp"
        android:textColor="@android:color/black"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3" />

    <EditText
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:textColorHint="@android:color/darker_gray"
        android:background="@drawable/white_button_border"
        android:hint="@string/expiry_date_month"
        android:inputType="number"
        android:gravity="center"
        android:textSize="25sp"        
        android:layout_marginTop="5dp"
        android:layout_marginStart="200dp"
        android:layout_marginEnd="20dp"
        android:paddingTop="10dp"
        android:paddingStart="1dp"
        android:paddingBottom="10dp"
        android:id="@+id/ExpiryMonthEditText" />

    <EditText
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:textColorHint="@android:color/darker_gray"
        android:background="@drawable/white_button_border"
        android:hint="@string/expiry_date_year"
        android:inputType="number"
        android:gravity="center"
        android:textSize="25sp"        
        android:layout_marginTop="5dp"
        android:layout_marginStart="300dp"
        android:layout_marginEnd="20dp"
        android:paddingTop="10dp"
        android:paddingStart="1dp"
        android:paddingBottom="10dp"
        android:id="@+id/ExpiryYearEditText" />   

    <EditText
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:textColorHint="@android:color/darker_gray"
        android:background="@drawable/white_button_border"
        android:hint="@string/card_cvc_preview"
        android:gravity="center"
        android:textSize="25sp"        
        android:layout_marginTop="30dp"
        android:layout_marginStart="200dp"
        android:layout_marginEnd="20dp"
        android:paddingTop="10dp"
        android:paddingStart="1dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/textView3"
        android:id="@+id/CvcEditText" />            
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/navigationSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:padding="10dp"        
        android:layout_marginTop="20dp"
        android:layout_alignParentBottom="true">
 
        <Button
            android:id="@+id/buttonHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancel_button"
            android:background="@drawable/white_button_border"
            android:textColor="@android:color/black"
            android:padding="16dp"
            android:layout_margin="16dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textAllCaps="false"/>/>

        <Button
            android:id="@+id/buttonLogin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/proceed_button"
            android:background="@drawable/light_blue_color_round"
            android:textColor="@android:color/white"
            android:padding="16dp"
            android:layout_margin="16dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textAllCaps="false"/>
    </LinearLayout> 
    
</LinearLayout>